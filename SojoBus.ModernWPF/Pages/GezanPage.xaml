<UserControl x:Class="SojoBus.ModernWPF.GezanPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Button Content="更新" Click="Button_Click"/>
                <TextBlock Text="高槻" Style="{StaticResource Heading2}" />
                <TextBlock x:Name="takatuki" Text="{Binding Takatuki.Value, Mode=OneWay}" />
                <TextBlock Text="富田" Style="{StaticResource Heading2}" />
                <TextBlock x:Name="tonda" Text="{Binding Tonda.Value, Mode=OneWay}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
